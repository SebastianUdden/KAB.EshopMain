@model ProductListViewModel[]
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-xs-offset-1">
            <h2>
                @switch (Model[0].CategoryId)
                {
                    case 2:
                        <h2>Pennor</h2>
                        break;
                    case 3:
                        <h2>Papper</h2>
                        break;
                    case 4:
                        <h2>Skrivare</h2>
                        break;
                    case 5:
                        <h2>Kök</h2>
                        break;
                    case 6:
                        <h2>Övrigt</h2>
                        break;
                    default:
                        break;
                }
            </h2>
        </div>
        <div class="col-xs-12 col-sm-8 col-md-6">
            <ul class="niceRows">
                @foreach (var item in Model)
                {
                    <li>
                        <a href="~/products/product/@item.Id">
                            @if (item.ImageURL.Length > 0 && item.ImageURL != null)
                            {
                                <img src=@item.ImageURL height="40" width="40">
                            }
                            else
                            {
                                <img height="40" width="40">
                            }
                            &emsp;
                            @item.ProductName
                            &emsp;
                            &emsp;
                            &emsp;
                            &emsp;
                            &emsp;
                            @item.Price
                        </a>
                    </li>
                }
            </ul>
            @*<table class="niceRows">
                    <tr>
                        <th>

                        </th>
                    </tr>

                </table>*@
        </div>
    </div>
</div>