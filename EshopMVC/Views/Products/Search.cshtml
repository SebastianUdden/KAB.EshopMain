@model ProductListViewModel[]
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-xs-offset-1">
            <ul class="niceRows">
                Sökresultat
                @foreach (var item in Model)
                {
                <li>
                    <a href="~/products/product/@item.Id">
                        @if (item.ImageURL.Length > 0 && item.ImageURL != null)
                        {
                        <img src=@item.ImageURL height="40" width="40">
                        }
                        else
                        {
                        <img height="40" width="40">
                        }
                        &emsp;
                        @item.ProductName
                        &emsp;
                        &emsp;
                        &emsp;
                        &emsp;
                        &emsp;
                        @item.Price
                    </a>
                </li>
                }
            </ul>
        </div>

    </div>
</div>
</div>